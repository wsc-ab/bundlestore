generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}


model Store {
  id        Int       @id @default(autoincrement())
  name      String
  detail    String
  link      String    @unique
  images    String[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  products  Product[]
  userId    String
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  detail    String
  link      String   @unique
  price     Int
  images    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  storeId   Int
  userId    String
  store     Store    @relation(fields: [storeId], references: [id])
  orders    Order[]
}

model Order {
  id         Int       @id @default(autoincrement())
  userId    String
  products   Product[]
  discountRate Int
  totalPrice Int
  createdAt  DateTime  @default(now())
}
